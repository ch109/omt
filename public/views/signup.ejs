<!DOCTYPE html>
<html lang="de">
<head>
  <%- include('partials/header') %>
</head>
<body>

  <!-- Nav Bar -->
  <%- include('partials/navbar') %>

  <!-- Content -->
  <div class="container">
    <br>
    <h2 class="header orange-text">Local Signup</h2>
    <br>

    <!-- Message: Authentication error -->
    <% if (message.length > 0) { %>
    <div class="row center">
      <div class="row">
        <div class="col s12 m8">
          <div class="card-panel red accent-3">
            <div id="error" class="white-text">
              <%= message %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <div class="row">

      <!-- LOGIN FORM -->
      <form class="row" action="/signup" method="post">
        <div class="row">
          <div class="input-field col l6 m9 s12">
            <input id="email" type="email" class="validate" name="email">
            <label for="email" data-error="wrong" data-success="right">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col l6 m9 s12">
            <input id="password" type="password" class="validate" name="password">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row">
          <button class="btn waves-effect waves-light" type="submit" name="action">
            Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </form>

    </div>

    <br>

    <div class="row">
      <h5 class="header col s12 light">
        Already have an account?&emsp;
        <a class="waves-effect waves-light btn orange" href="/login">
          <i class="right">
            <span class="fa fa-id-card-o"></span>
          </i>Local Login
        </a>
      </h5>
    </div>
    <div class="row light">
      <a class="waves-effect waves-light btn orange" href="/">
        <i class="right">
          <span class="fa fa-home"></span>&emsp;
        </i>
        Main Page
      </a>
    </div>
    <br><br>
  </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- jQuery Toast -->
  <%- include('partials/toast') %>

  </body>
</html>
